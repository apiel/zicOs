# Architecture
BR2_aarch64=y
BR2_cortex_a72=y

# Toolchain
BR2_TOOLCHAIN_BUILDROOT_GLIBC=y

# Kernel headers (match your kernel version)
BR2_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Filesystem
BR2_TARGET_ROOTFS_EXT2=y
BR2_TARGET_ROOTFS_EXT2_4=y
BR2_TARGET_ROOTFS_EXT2_SIZE="256M"
BR2_TARGET_ROOTFS_TAR=y

# Serial console and DHCP
BR2_TARGET_GENERIC_GETTY_PORT="tty1"
BR2_SYSTEM_DHCP="eth0 wlan0"

# Custom rootfs overlay
BR2_ROOTFS_OVERLAY="board/zicbox/overlay"

# Kernel from Raspberry Pi GitHub
BR2_LINUX_KERNEL=y
BR2_LINUX_KERNEL_CUSTOM_GIT=y
BR2_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/raspberrypi/linux"
BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="rpi-6.1.y"
# BR2_LINUX_KERNEL_CUSTOM_REPO_VERSION="rpi-6.6.y"
BR2_LINUX_KERNEL_DEFCONFIG="bcm2711"
BR2_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/zicbox/linux.config"
BR2_LINUX_KERNEL_DTS_SUPPORT=y
BR2_LINUX_KERNEL_INTREE_DTS_NAME="broadcom/bcm2711-rpi-cm4"

# Networking
BR2_PACKAGE_WPA_SUPPLICANT=y
BR2_PACKAGE_WPA_SUPPLICANT_AUTOMATIC_SCAN=y

# SSH
BR2_PACKAGE_DROPBEAR=y
BR2_PACKAGE_DROPBEAR_DISABLE_PATH=y

# Package management
BR2_PACKAGE_OPKG=y

# Audio (optional, if needed)
BR2_PACKAGE_PULSEAUDIO=y
BR2_PACKAGE_ALSA_UTILS=y

# Host utilities
BR2_PACKAGE_HOST_SCP=y
